"不兼容vi
set nocompatible

color evening
set number

set tabstop=4
set shiftwidth=4

"不备份
set nobackup

"搜索时忽略大小写
set ignorecase
"高亮显示被搜到的文本
set hlsearch
"即时搜索
set incsearch
"搜索到文件两端时不重新搜索
"set nowrapscan

"自动换行
set wrap

set history=1024

"编码
"set encoding=utf-8
"set langmenu=zh_CN.UTF-8
"set termencoding=cp936
"language messages zh_CN.UTF-8
set fencs=ucs-bom,utf-8,gbk,gb2312,gb18030,big5,shift-jis,euc-jp,euc-kr,default,latin1
set ffs=unix,dos,mac

"自动设置tag
exec('set tag='.findfile("tags", ".;"))

"缓冲区隐藏
"set hid

"增加命令行模式
set wildmenu

"用空格替换tab
"set expandtab

"退格键动作
set backspace=indent,eol,start

"高亮显示开启
syntax on


"缩进
set autoindent
filetype plugin indent on
